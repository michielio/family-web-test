<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlets.FamilyWeb.LoginServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SocialworkerServlet</servlet-name>
		<servlet-class>servlets.FamilyWeb.SocialworkerServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SocialworkerServlet</servlet-name>
		<url-pattern>/SocialworkerServlet.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	<filter>
		<description>
		</description>
		<display-name>ÀdminFilter</display-name>
		<filter-name>ÀdminFilter</filter-name>
		<filter-class>util.FamilyWeb.ÀdminFilter</filter-class>
	</filter>
	<filter>
		<description>
		</description>
		<display-name>SocialworkerFilter</display-name>
		<filter-name>SocialworkerFilter</filter-name>
		<filter-class>util.FamilyWeb.SocialworkerFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ÀdminFilter</filter-name>
		<url-pattern>/administrator/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SocialworkerFilter</filter-name>
		<url-pattern>/socialworker/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>util.FamilyWeb.MyServletContextListener
		</listener-class>
	</listener>
</web-app>